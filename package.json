{
  "name": "root",
  "private": true,
  "scripts": {
    "link": "lerna link",
    "build": "npm run build:normal && npm run build:lib",
    "dev:normal": "node scripts/dev-normal.js",
    "dev:lib": "node scripts/dev-lib.js",
    "build:normal": "node scripts/build-normal.js",
    "build:lib": "node scripts/build-lib.js",
    "release": "lerna version",
    "publish:lib": "lerna publish from-package --yes",
    "publish:rc": "lerna publish from-package --canary --yes --pre-dist-tag alpha --preid alpha",
    "test": "jest",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "lint:fix": "eslint --fix --ext .ts packages/*/src/**.ts",
    "generate": "node scripts/generate.js"
  },
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "npmClient": "npm",
  "engines": {
    "node": ">=16.13.1"
  },
  "dependencies": {
    "@test-lerna-repo/test-lerna-repo-b": "file:packages/test-lerna-repo-b",
    "@test-lerna-repo/test-lerna-repo-c": "file:packages/test-lerna-repo-c",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@microsoft/api-extractor": "^7.15.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "async": "^2.6.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "chalk": "^4.1.0",
    "eslint": "^8.7.0",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "jest": "^27.4.7",
    "lerna": "^3.22.1",
    "lint-staged": "^12.3.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rollup": "^2.68.0",
    "rollup-plugin-polyfill-node": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
