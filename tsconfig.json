{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es5",
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "paths": {
      "@test-lerna-repo/*": ["packages/*/src"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "packages/global.d.ts",
    "packages/test-lerna-repo-a/src",
    "packages/test-lerna-repo-b/src",
    "packages/test-lerna-repo-c/src"
  ]
}
